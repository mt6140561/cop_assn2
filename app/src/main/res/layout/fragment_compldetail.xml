<?xml version="1.0"?>

    <FrameLayout android:background="#ffffff" tools:context="com.example.rishabh_pc.complaintsystem.compldetail" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: Update blank fragment layout -->



    <ScrollView android:layout_height="wrap_content" android:layout_width="wrap_content">


    <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/comptitl"
        android:text="Title"
        android:textSize="30sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/complevel"
        android:text="level"
        android:textSize="20sp"
        android:layout_below="@id/comptitl"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/compcre"
        android:text="created_at"
        android:textSize="20sp"
        android:layout_below="@id/comptitl"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/complevel"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/compdescr"
        android:text="Description"
        android:textSize="30sp"
        android:layout_below="@id/comptitl"
        android:layout_marginTop="30sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/compby"
        android:text="Complaint by"
        android:textSize="20sp"
        android:layout_below="@id/compdescr"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/compresid"
        android:text="Resid"
        android:textSize="20sp"
        android:layout_below="@id/compdescr"
        android:layout_toRightOf="@id/compby"
        android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/compresbool"
            android:text="complbool"
            android:textSize="20sp"
            android:layout_below="@id/compresid"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/compid"
            android:text="comp id"
            android:textSize="20sp"
            android:layout_below="@id/compresbool"/>



    </RelativeLayout>

</ScrollView>

</FrameLayout>