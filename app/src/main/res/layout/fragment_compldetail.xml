<?xml version="1.0"?>

    <ScrollView android:background="#ffffff"
    tools:context="com.example.rishabh_pc.complaintsystem.compldetail"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: Update blank fragment layout -->





    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/titl"
            android:text="Title"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"/>


        <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:id="@+id/comptitl"
            android:layout_below="@+id/titl"
        android:text="Title"
            android:layout_centerHorizontal="true"
        android:textSize="20sp"/>


        <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/compcre"
        android:text="created_at"
        android:textSize="20sp"
        android:layout_below="@id/comptitl"
        android:layout_marginLeft="120dp"
        />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/cre"
            android:text="Created_at :"
            android:textSize="20sp"
            android:layout_below="@id/comptitl"
            android:layout_marginLeft="0dp"
            />



        <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/descr"
        android:text="Description"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/comptitl"
        android:layout_marginTop="30sp"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/compdescr"
            android:text="Description"
            android:textSize="20sp"
            android:layout_below="@id/descr"
            android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/compby"
        android:text="Complaint by"
        android:textSize="20sp"
        android:layout_marginLeft="200dp"
        android:layout_below="@id/compdescr"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/by"
            android:text="Complaint by :"
            android:textSize="20sp"
            android:layout_below="@id/compdescr"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/complevel"
            android:text="level"
            android:textSize="20sp"
            android:layout_marginLeft="200dp"
            android:layout_below="@id/compby"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/level"
            android:text="Complaint level :"
            android:textSize="20sp"
            android:layout_below="@id/compby"/>


        <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/compresid"
        android:text="Resid"
            android:layout_marginLeft="200dp"
        android:textSize="20sp"
        android:layout_below="@id/complevel"
        />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/resid"
            android:text="Resolve Id :"
            android:textSize="20sp"
            android:layout_below="@id/level"


            />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/compresbool"
            android:text="complbool"
            android:textSize="20sp"
            android:layout_marginLeft="200dp"
            android:layout_below="@id/compresid"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/resbool"
            android:text="Resolved or not :"

            android:textSize="20sp"
            android:layout_below="@id/compresid"/>



        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/compid"
            android:text="comp id"
            android:textSize="20sp"
 android:layout_marginLeft="200dp"
            android:layout_below="@id/compresbool"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/ompid"
            android:text="Complaint id :"
            android:textSize="20sp"
            android:layout_below="@id/compresbool"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/status"
            android:text="Status :"
            android:textSize="20sp"
            android:layout_below="@id/compid"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/compstatus"
            android:text="Status :"
            android:textSize="20sp"
            android:layout_marginLeft="200dp"
            android:layout_below="@id/compid"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upvote"
            android:id="@+id/upvote"
            android:onClick="upvote"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/compstatus"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downvote"
            android:id="@+id/downvote"
            android:layout_below="@+id/compstatus"
            android:onClick="downvote"
            android:layout_marginLeft="270dp"

        />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolve"
            android:id="@+id/resolve"
            android:layout_below="@+id/compstatus"
            android:onClick="resolve"
            android:layout_centerHorizontal="true"


            />


    </RelativeLayout>

</ScrollView>